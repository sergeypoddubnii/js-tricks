{
  "compilerOptions": {
  	"baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  	"include": ["src"],
  	"plugins": [{
		"name": "typescript-plugin-css-modules",
		"options": {
			"customMatcher": "\\.scss$"
		}
	}],
  	"typeRoots" : ["src", "node_modules/@types", "src/types"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
  	"styles.d.ts"
  ]
}
