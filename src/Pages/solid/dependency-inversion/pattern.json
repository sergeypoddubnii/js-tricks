"import React, {useState, useEffect} from 'react';\n\n\nconst useArticles = () => {\n\tconst [articles, setArticles] = useState([]);\n\tuseEffect(() => {\n\t\tasync function getTodosWithFetch() {\n\t\t\tconst response = await fetch('some path to get articles');\n\t\t\tconst data = await response.json();\n\t\t\tsetArticles(data);\n\t\t}\n\t\tgetTodosWithFetch();\n\t}, []);\n\n\treturn articles;\n};\n\nconst SomeComponent = () => {\n\tconst articles = useArticles();\n\n\tconst articlesList = articles.map((item) => {\n\t\treturn <div key={item}>item</div>;\n\t});\n\treturn (\n\t\t<div>\n\t\t\t{articlesList}\n\t\t</div>\n\t);\n};\n\n"
